package com.excilys.formation.java.cbd.model;

import java.util.ArrayList;
import java.util.List;

public abstract class Page <T>{
	private List<T> entity;
	private static final int NB_ELEMENTS_BY_PAGE = 10;
	private int numPage, offset, totalPage;
	
	public Page(ArrayList<T> entity) {
		this.entity = entity;
	}
	
	public void setOffset() {
		this.offset = (this.numPage - 1) * NB_ELEMENTS_BY_PAGE;
	}
	
	public Integer setTotalPage() {
		Integer nbEntries = computerDao.count();
		Integer nbPages = nbEntries/NB_ELEMENTS_BY_PAGE;
		return nbEntries%NB_ELEMENTS_BY_PAGE == 0?nbPages:nbPages+1;
	}
	
	public void printPage() {
		for(T elem:entity) {
			System.out.println(elem);
		}
	}
}
