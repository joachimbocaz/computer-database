package com.excilys.formation.java.cbd.model;

import java.util.ArrayList;
import java.util.List;

public class PageDisplay {
	private List<Page> pageL;
	
	public PageDisplay(ArrayList<Page> pageL) {
		this.pageL = pageL;
	}
	
	public void printPageComputer(int nPage) {
		for(Computer elem:this.pageL.get(nPage).getComputerL()) {
			System.out.println(elem);
		}
	}
	
