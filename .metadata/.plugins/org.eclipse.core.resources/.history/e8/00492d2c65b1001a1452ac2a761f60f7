package com.excilys.formation.java.cbd.mapper;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.excilys.formation.java.cbd.model.Companie;


public class CompanieMapper extends AbstractMapper<Companie>{

	@Override
	public Companie createEntity(ResultSet result) throws SQLException {
		Companie companie = new Companie();
	    if(result.first()) {
	    	companie = new Companie(result.getInt("id"), result.getString("name"));
		}
		return companie;
	}

	@Override
	public List<Companie> createListEntity(ResultSet result) throws SQLException{
		List<Companie> companyList = new ArrayList<Companie>()
		Companie companie = new Companie();
		while(result.next()) {
			companie = new Companie(result.getInt("id"), result.getString("name"));
			companyList.add(company);
		}
		return null;
	}
	

}
