package com.excilys.formation.java.cbd.cli;

import java.util.Scanner;

import com.excilys.formation.java.cbd.service.ConnectDB;

public class TestCli {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		CommandLine command = new CommandLine(new ConnectDB());
		command.home();
		
		while(true) {
			System.out.println("Entrez une option : ");
			command.setCommandIn(sc.nextLine());
			if(command.getCommandIn().equals("q")) {
				break;
			}
			command.executeCommande();
		}
		
		System.out.println("Fin du programme");
		sc.close();
	}
}
