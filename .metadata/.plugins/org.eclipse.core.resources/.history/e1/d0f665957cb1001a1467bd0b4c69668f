package com.excilys.formation.java.cbd.model;

import java.util.ArrayList;
import java.util.List;

import com.excilys.formation.java.cbd.dao.Dao;

public class Page <T>{
	private List<T> entity;
	private static final int NB_ELEMENTS_BY_PAGE = 10;
	private int numPage, offset;
	
	public Page(ArrayList<T> entity, int numPage) {
		this.entity = entity;
		this.numPage = numPage;
	}

	public int getNumPage() {
		return numPage;
	}

	public void setOffset() {
		this.offset = (this.numPage - 1) * NB_ELEMENTS_BY_PAGE;
	}

	public void setEntity(Dao<T> dao) {
		entity = dao.findAllLimite(NB_ELEMENTS_BY_PAGE, this.offset);
	}
	
	public void printPage() {
		for(T elem:entity) {
			System.out.println(elem);
		}
	}
}
